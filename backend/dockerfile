FROM python:3.11-slim
WORKDIR /app
COPY pyproject.toml /app/
RUN pip install --no-cache-dir -U pip && pip install --no-cache-dir fastapi uvicorn[standard] pydantic sqlalchemy psycopg2-binary python-multipart passlib[bcrypt] pyjwt alembic redis rq jinja2 openpyxl
COPY . /app
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]